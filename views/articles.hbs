<div class="container">
  <div class="" uk-grid>
    <div class="uk-width-2-3@s">
      <div class="uk-card uk-card-default uk-card-body">
        <h4 class="uk-heading-divider uk-text-uppercase">
          Статьи
        </h4>
        {{#if arr.articles.length}}
        <div uk-slider="center: true">
          <div class=" uk-margin-small uk-width-expand">
            <a uk-slidenav-previous uk-slider-item="previous"></a>
            <a uk-slidenav-next uk-slider-item="next"></a>
          </div>
          <div class="uk-position-relative" tabindex="-1">
            <ul class="uk-slider-items uk-child-width-3-4@s" uk-grid>
              {{#each arr.articles}}
              <li>
                <div class="uk-panel">
                  <div class="uk-card-media-top">
                    <img src="{{img}}" alt="{{title}}">
                  </div>
                  <div class="uk-panel">
                    <h4 class="uk-text-uppercase uk-margin-medium-top">{{title}}</h4>
                    {{{text}}}
                  </div>
                </div>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
        {{/if}}
      </div>
    </div>

{{!-- Краткие новости --}}

    <div class="uk-width-1-3@s">
      <div class="uk-card uk-card-default uk-card-body">
        {{#if arr.shortNews.length}}
        <div uk-slider="center: true; autoplay: true; autoplay-interval: 10000">
          <div class="uk-position-relative" tabindex="-1">
            <ul class="uk-slider-items uk-child-width-3-4@s" uk-grid>
              {{#each arr.shortNews}}
              <li>
                <div class="uk-panel">
                  <div class="uk-card-media-top">
                    <img src="{{img}}" alt="{{title}}">
                  </div>
                  <div class="uk-panel">
                    <h4 class="uk-text-uppercase uk-margin-medium-top">{{title}}</h4>
                    {{{text}}}
                  </div>
                </div>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
