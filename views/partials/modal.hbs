{{!-- Окно авторизации --}}

<div id="authorization" uk-modal>
  <div class="uk-modal-dialog uk-modal-body uk-width-1-6@m uk-text-center">
    <button class="uk-modal-close-default" type="button" uk-close></button>
    <h2 class="uk-modal-title">Авторизация</h2>
    <form action="/in" method="post">
      <div class="uk-margin">
        <div class="uk-inline">
          <span class="uk-form-icon" uk-icon="icon: user"></span>
          <input id="emailIn" class="uk-input" type="email" name="email" required>
        </div>
      </div>
      <div class="uk-margin">
        <div class="uk-inline">
          <span class="uk-form-icon" uk-icon="icon: lock"></span>
          <input id="pwdIn" class="uk-input" type="password" name="pwd" required>
        </div>
      </div>
      <button class="uk-button uk-button-primary" type="submit">Войти</button>
    </form>
  </div>
</div>